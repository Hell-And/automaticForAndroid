<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".VerificationActivity"
    tools:ignore="MissingConstraints">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="5dp"
        app:bl_corners_radius="5dp"
        app:bl_stroke_color="#D5D4D4"
        app:bl_stroke_width="1px">

        <TextView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="识别码: "
            android:textColor="#333333"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/et_deviceCode"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center_vertical"
            android:textColor="#333333"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="5dp"
        app:bl_corners_radius="5dp"
        app:bl_stroke_color="#D5D4D4"
        app:bl_stroke_width="1px">

        <TextView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="日期: "
            android:textColor="#333333"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_dateTime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_weight="1"
            android:textColor="#333333"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal"
        app:bl_corners_radius="5dp"
        app:bl_stroke_color="#D5D4D4"
        app:bl_stroke_width="1px">

        <TextView
            android:id="@+id/tv_activationCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="4dp"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="联系管理员获取激活码"
            android:minHeight="40dp"
            android:padding="5dp"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_copyImei"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="right"
            android:gravity="center"
            android:padding="5dp"
            android:text="复制"
            android:textSize="11sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">


        <Button
            android:id="@+id/bt_getVerCoe"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@null"
            android:text="生成激活码"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            app:bl_corners_radius="5dp"
            app:bl_pressed_drawable="#016659"
            app:bl_ripple_color="#016659"
            app:bl_ripple_enable="true"
            app:bl_unPressed_drawable="#008577" />

        <Button
            android:id="@+id/bt_verification"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@null"
            android:text="验证"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:visibility="gone"
            app:bl_corners_radius="5dp"
            app:bl_pressed_drawable="#016659"
            app:bl_ripple_color="#016659"
            app:bl_ripple_enable="true"
            app:bl_unPressed_drawable="#008577" />
    </LinearLayout>

</LinearLayout>